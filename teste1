        <div class="controls">
          <input id="search" class="input" placeholder="Buscar por nome, mapa, elemento..." />
        </div>
      </div>

      <div class="filters">
        <select id="filterElement">
          <option value="">Elemento (todos)</option>
          <option>Vento</option><option>Fogo</option><option>Água</option><option>Terra</option><option>Sombrio</option><option>Sagrado</option>
        </select>
        <select id="filterRace">
          <option value="">Raça (todas)</option>
          <option>Inseto</option><option>Demoníaco</option><option>Bruto</option><option>Pecus</option><option>Mortos-vivos</option><option>Humanoide</option>
        </select>
        <select id="filterSize">
          <option value="">Tamanho (todos)</option>
          <option>Pequeno</option><option>Médio</option><option>Grande</option>
        </select>
        <select id="filterMap">
          <option value="">Mapa (todos)</option>
          <option>Payon Forest</option><option>Glacier Cliff</option><option>Prontera Field</option><option>Geffen Dungeon</option>
        </select>
      </div>
