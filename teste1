  <script>
    // =========================
    // DADOS DOS MVPS (edite aqui)
    // =========================
    const MVPS = [
      {
        id: "mistress",
        name: "Mistress",
        mapName: "Payon Forest",
        // Troque por link próprio (ex.: seu GitHub Pages / images/maps/payon_forest.jpg)
        mapImage: "https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=1200&auto=format&fit=crop",
        position: { x: 72, y: 28 }, // porcentagem sobre a imagem
        size: "Médio",
        race: "Inseto",
        element: "Vento",
        elementClass: "el-wind",
        loots: [
          { name: "Carta Mistress", icon: "https://raw.githubusercontent.com/google/material-design-icons/master/png/action/grade/materialicons/24dp/2x/baseline_grade_black_24dp.png" },
          { name: "Blue Gemstone", icon: "https://raw.githubusercontent.com/google/material-design-icons/master/png/content/link/materialicons/24dp/2x/baseline_link_black_24dp.png" },
          { name: "Mithril", icon: "https://raw.githubusercontent.com/google/material-design-icons/master/png/action/build/materialicons/24dp/2x/baseline_build_black_24dp.png" }
        ],
        tags: ["MVP", "Mágica"]
      },
      {
        id: "baphomet",
        name: "Baphomet",
        mapName: "Glacier Cliff",
        mapImage: "https://images.unsplash.com/photo-1519681393784-d120267933ba?q=80&w=1200&auto=format&fit=crop",
        position: { x: 40, y: 62 },
        size: "Grande",
        race: "Demoníaco",
        element: "Sombrio",
        elementClass: "el-ghost",
        loots: [
          { name: "Carta Baphomet", icon: "https://raw.githubusercontent.com/google/material-design-icons/master/png/action/visibility/materialicons/24dp/2x/baseline_visibility_black_24dp.png" },
          { name: "Spear of Baphomet", icon: "https://raw.githubusercontent.com/google/material-design-icons/master/png/action/gavel/materialicons/24dp/2x/baseline_gavel_black_24dp.png" }
        ],
        tags: ["MVP", "Área"]
      }
      // Adicione mais MVPs aqui repetindo o objeto acima
    ];

    // =========================
    // LÓGICA DE FILTROS E RENDER
    // =========================
    const elGrid = document.getElementById('grid');
    const elEmpty = document.getElementById('empty');
    const elSearch = document.getElementById('search');
    const elElement = document.getElementById('filterElement');
    const elRace = document.getElementById('filterRace');
    const elSize = document.getElementById('filterSize');
    const elMap = document.getElementById('filterMap');

    function matchesFilters(m){
      const q = (elSearch.value || "").trim().toLowerCase();
      const byQ = !q || [
        m.name, m.mapName, m.race, m.element, ...(m.tags||[])
      ].join(" ").toLowerCase().includes(q);

      const byEl = !elElement.value || m.element === elElement.value;
      const byRace = !elRace.value || m.race === elRace.value;
      const bySize = !elSize.value || m.size === elSize.value;
      const byMap = !elMap.value || m.mapName === elMap.value;
      return byQ && byEl && byRace && bySize && byMap;
    }

    function card(m){
      const el = document.createElement('div');
      el.className = 'card';
      el.innerHTML = `
        <div class="map">
          <img src="${m.mapImage}" alt="Mapa de ${m.mapName}" />
          <div class="pin" style="left:${m.position.x}%; top:${m.position.y}%;" title="Posição de ${m.name}"></div>
        </div>
        <div class="body">
          <div class="row">
            <div class="name">${m.name}</div>
            <div class="tags">
              ${(m.tags||[]).map(t=>`<span class="chip">${t}</span>`).join('')}
            </div>
          </div>
          <div class="prop">
            <div class="item">
              <div class="label">Mapa</div>
              <div>${m.mapName}</div>
            </div>
            <div class="item">
              <div class="label">Tamanho</div>
              <div>${m.size}</div>
            </div>
            <div class="item">
              <div class="label">Raça</div>
              <div>${m.race}</div>
            </div>
            <div class="item">
              <div class="label">Elemento</div>
              <div><span class="element ${m.elementClass}"></span>${m.element}</div>
            </div>
          </div>
          <div class="loot">
            ${(m.loots||[]).map(l=>`
              <div class="drop">
                <img src="${l.icon}" alt="${l.name}" />
                <span>${l.name}</span>
              </div>`).join('')}
          </div>
        </div>
      `;
      return el;
    }

    function render(){
      elGrid.innerHTML = '';
      const list = MVPS.filter(matchesFilters);
      elEmpty.style.display = list.length ? 'none' : 'block';
      for(const m of list){ elGrid.appendChild(card(m)); }
    }

    [elSearch, elElement, elRace, elSize, elMap].forEach(el=>{
      el.addEventListener('input', render);
      el.addEventListener('change', render);
    });

    render();
  </script>
</body>
</html>
